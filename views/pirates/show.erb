<h1>Pirates</h1>

<div class="parit">
    <h3>Name: <%= @pirate.name %> </h3>
    <h3>weight: <%= @pirate.weight %> </h3>
    <h3>height: <%= @pirate.height %> </h3>
</div>
<br>
<h1>Ships</h1>
<% @ships.each do |ship|%>
<div class="ship">
    <h2>Name: <%= ship.name %> </h2>
    <h2>Type: <%= ship.type %> </h2>
    <h2>Booty: <%= ship.booty %> </h2>

</div>
<% end %>

